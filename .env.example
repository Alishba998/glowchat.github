# Rename to .env in production and fill values
PORT=3000
NODE_ENV=production
JWT_SECRET=your_jwt_secret_here

# Postgres
DATABASE_URL=postgres://postgres:postgres@postgres:5432/glowchat

# Redis (for adapter/presence)
REDIS_URL=redis://redis:6379

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1

# Twilio (SMS OTP)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (FCM) - for web push (optional)
FCM_SERVER_KEY=your_fcm_server_key

# TURN server (coturn) - set host/ip and credentials
TURN_HOST=turn.example.com
TURN_USER=turnuser
TURN_PASS=turnpass

# MinIO (local S3 alternative)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=glowchat-local
